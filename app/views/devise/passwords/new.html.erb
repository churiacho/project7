<div class="jumbotron"><h2>Forgot your password?</h2></div>
<div class="container" id="container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-4 offset-4">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input col-12" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-block btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
